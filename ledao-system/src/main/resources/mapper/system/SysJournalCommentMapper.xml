<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ledao.system.mapper.SysJournalCommentMapper">
    
    <resultMap type="SysJournalComment" id="SysJournalCommentResult">
        <result property="id"    column="id"    />
        <result property="journalId"    column="journal_id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="workDetail"    column="work_detail"    />
        <result property="remarks1"    column="remarks1"    />
        <result property="remarks2"    column="remarks2"    />
        <result property="remarks3"    column="remarks3"    />
        <result property="createBy"    column="create_by"    />
        <result property="creator"    column="creator"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="reviser"    column="reviser"    />
        <result property="updateTime"    column="update_time"    />
        <result property="userName"    column="user_name"    />
    </resultMap>

    <sql id="selectSysJournalCommentVo">
        select id, journal_id, parent_id, work_detail, remarks1, remarks2, remarks3, create_by, creator, create_time, update_by, reviser, update_time from sys_journal_comment
    </sql>

    <select id="selectSysJournalCommentList" parameterType="SysJournalComment" resultMap="SysJournalCommentResult">
        SELECT
        com.*,
        u.user_name
        FROM
        sys_journal_comment com
        LEFT JOIN sys_user u ON com.create_by = u.login_name
        <where>  
            <if test="journalId != null  and journalId != ''"> and com.journal_id = #{journalId}</if>
            <if test="parentId != null  and parentId != ''"> and com.parent_id = #{parentId}</if>
            <if test="workDetail != null  and workDetail != ''"> and com.work_detail = #{workDetail}</if>
            <if test="remarks1 != null  and remarks1 != ''"> and com.remarks1 = #{remarks1}</if>
            <if test="remarks2 != null  and remarks2 != ''"> and com.remarks2 = #{remarks2}</if>
            <if test="remarks3 != null  and remarks3 != ''"> and com.remarks3 = #{remarks3}</if>
            <if test="creator != null  and creator != ''"> and com.creator = #{creator}</if>
            <if test="reviser != null  and reviser != ''"> and com.reviser = #{reviser}</if>
        </where>
        order by com.create_time desc
    </select>
    
    <select id="selectSysJournalCommentById" parameterType="Long" resultMap="SysJournalCommentResult">
        <include refid="selectSysJournalCommentVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSysJournalComment" parameterType="SysJournalComment" useGeneratedKeys="true" keyProperty="id">
        insert into sys_journal_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="journalId != null">journal_id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="workDetail != null">work_detail,</if>
            <if test="remarks1 != null">remarks1,</if>
            <if test="remarks2 != null">remarks2,</if>
            <if test="remarks3 != null">remarks3,</if>
            <if test="createBy != null">create_by,</if>
            <if test="creator != null">creator,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="reviser != null">reviser,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="journalId != null">#{journalId},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="workDetail != null">#{workDetail},</if>
            <if test="remarks1 != null">#{remarks1},</if>
            <if test="remarks2 != null">#{remarks2},</if>
            <if test="remarks3 != null">#{remarks3},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="creator != null">#{creator},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="reviser != null">#{reviser},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysJournalComment" parameterType="SysJournalComment">
        update sys_journal_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="journalId != null">journal_id = #{journalId},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="workDetail != null">work_detail = #{workDetail},</if>
            <if test="remarks1 != null">remarks1 = #{remarks1},</if>
            <if test="remarks2 != null">remarks2 = #{remarks2},</if>
            <if test="remarks3 != null">remarks3 = #{remarks3},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="creator != null">creator = #{creator},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="reviser != null">reviser = #{reviser},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysJournalCommentById" parameterType="Long">
        delete from sys_journal_comment where id = #{id}
    </delete>

    <delete id="deleteSysJournalCommentByIds" parameterType="String">
        delete from sys_journal_comment where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>