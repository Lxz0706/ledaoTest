<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ledao.system.mapper.SysValuationMapper">

    <resultMap type="SysValuation" id="SysValuationResult">
        <result property="valuationId" column="valuation_id"/>
        <result property="itemType" column="item_type"/>
        <result property="itemStatus" column="item_status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="itemId" column="item_id"/>
    </resultMap>

    <sql id="selectSysValuationVo">
        select valuation_id,
               item_type,
               item_status,
               create_by,
               create_time,
               update_by,
               update_time,
               item_id
        from sys_valuation
    </sql>

    <select id="selectSysValuationList" parameterType="SysValuation" resultMap="SysValuationResult">
        <include refid="selectSysValuationVo"/>
        <where>
            <if test="itemType != null  and itemType != ''">and item_type = #{itemType}</if>
            <if test="itemStatus != null  and itemStatus != ''">and item_status = #{itemStatus}</if>
            <if test="itemId !=null and itemId !=''">and item_id=#{itemId}</if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectSysValuationById" parameterType="Long" resultMap="SysValuationResult">
        <include refid="selectSysValuationVo"/>
        where valuation_id = #{valuationId}
    </select>

    <insert id="insertSysValuation" parameterType="SysValuation" useGeneratedKeys="true" keyProperty="valuationId">
        insert into sys_valuation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="itemType != null">item_type,</if>
            <if test="itemStatus != null">item_status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="itemId !=null">item|_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="itemType != null">#{itemType},</if>
            <if test="itemStatus != null">#{itemStatus},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="itemId !=null">#{itemId},</if>
        </trim>
    </insert>

    <update id="updateSysValuation" parameterType="SysValuation">
        update sys_valuation
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemType != null">item_type = #{itemType},</if>
            <if test="itemStatus != null">item_status = #{itemStatus},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="itemId !=null">item_id = #{itemId},</if>
        </trim>
        where valuation_id = #{valuationId}
    </update>

    <delete id="deleteSysValuationById" parameterType="Long">
        delete
        from sys_valuation
        where valuation_id = #{valuationId}
    </delete>

    <delete id="deleteSysValuationByIds" parameterType="String">
        delete from sys_valuation where valuation_id in
        <foreach item="valuationId" collection="array" open="(" separator="," close=")">
            #{valuationId}
        </foreach>
    </delete>

</mapper>